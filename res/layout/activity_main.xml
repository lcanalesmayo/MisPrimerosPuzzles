<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/campo"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".80"
        android:orientation="horizontal"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".20" >

            <ImageView
                android:id="@+id/button_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:onClick="gotoHome"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/button_bombilla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:onClick="darPista"
                android:src="@drawable/button_bombilla" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".80" >

            <GridLayout
                android:id="@+id/puzzle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:rowCount="2"
                android:stretchMode="columnWidth" >

                <LinearLayout
                    android:id="@+id/topleft"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/shape"
                    android:tag="puzzlepart1" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/topright"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/shape"
                    android:tag="puzzlepart2" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomleft"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/shape"
                    android:tag="puzzlepart3" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomright"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/shape"
                    android:tag="puzzlepart4" >
                </LinearLayout>
            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:rowCount="2"
                android:stretchMode="columnWidth" >

                <LinearLayout
                    android:id="@+id/topleftsolution"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/burro00" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toprightsolution"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/burro01" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomleftsolution"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/burro10" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomrightsolution"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/burro11" >
                </LinearLayout>
            </GridLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".20"
        android:background="@drawable/starting"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/puzzlepart1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:adjustViewBounds="true"
            android:background="@drawable/piezapuzzle"
            android:src="@drawable/burro00"
            android:tag="puzzlepart1" />

        <ImageView
            android:id="@+id/puzzlepart2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:adjustViewBounds="true"
            android:background="@drawable/piezapuzzle"
            android:src="@drawable/burro01"
            android:tag="puzzlepart2" />

        <ImageView
            android:id="@+id/puzzlepart3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:adjustViewBounds="true"
            android:background="@drawable/piezapuzzle"
            android:src="@drawable/burro10"
            android:tag="puzzlepart3" />

        <ImageView
            android:id="@+id/puzzlepart4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:adjustViewBounds="true"
            android:background="@drawable/piezapuzzle"
            android:src="@drawable/burro11"
            android:tag="puzzlepart4" />
    </LinearLayout>

</LinearLayout>